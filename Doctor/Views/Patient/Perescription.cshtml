@model Doctor.ViewModel.PrescriptonView
<div class="container text-center">
    <div class="row">
        <div class="col-md-6 shadow-lg p-3 mb-2 bg-white rounded ">
            <h3>Medicine Vs Appointment</h3>
            <img src="@Url.Action("MedicineChart")"/>
        </div>
        <div class="col-md-6 shadow-lg p-3 mb-2 bg-white rounded">
            <table class="table table-hover">
                <thead>
                <h3>Advice</h3>
                </thead>
                @foreach (var adv in Model.Prescriptions)
                {
                    <tr>
                        <td>
                            @adv.Advice
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 shadow-lg p-3 mb-2 bg-white rounded">
            <h3>Medicine List</h3>
            <table class="table table-hover">
                <tr>
                    <th>Medicine Name</th>
                    <th>Amount</th>
                    <th>Dose</th>
                    <th>Day</th>
                    <th>Comment</th>
                </tr>
                @foreach (var med in Model.Medicines)
                {
                    <tr>
                        <td>@med.Name</td>
                        <td>@med.Amount mg</td>
                        <td>@med.Dose</td>
                        <td>@med.Day</td>
                        <td>@med.Comment</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-6 shadow-lg p-3 mb-2 bg-white rounded">
            <h3>Medical Test</h3>
            <table class="table table-hover">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                </tr>
                @foreach (var re in Model.Reports)
                {
                    <tr>
                        <td>@re.TestName</td>
                        <td>@re.Description</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
