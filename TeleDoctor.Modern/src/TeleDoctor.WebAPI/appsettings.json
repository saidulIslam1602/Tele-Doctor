{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=TeleDoctorModernDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!",
    "Issuer": "TeleDoctor.Modern",
    "Audience": "TeleDoctor.Users",
    "ExpiryInMinutes": 60
  },
  "AI": {
    "AzureOpenAI": {
      "Endpoint": "https://your-openai-resource.openai.azure.com/",
      "ApiKey": "your-azure-openai-api-key",
      "DeploymentName": "gpt-4",
      "ChatDeploymentName": "gpt-4",
      "EmbeddingDeploymentName": "text-embedding-ada-002",
      "MaxTokens": 4000,
      "Temperature": 0.3,
      "TopP": 0.95,
      "MaxRetries": 3
    },
    "CognitiveServices": {
      "Endpoint": "https://your-cognitive-services.cognitiveservices.azure.com/",
      "ApiKey": "your-cognitive-services-api-key",
      "Region": "norwayeast",
      "TextAnalytics": {
        "Endpoint": "https://your-text-analytics.cognitiveservices.azure.com/",
        "ApiKey": "your-text-analytics-api-key"
      },
      "Translator": {
        "Endpoint": "https://api.cognitive.microsofttranslator.com/",
        "ApiKey": "your-translator-api-key",
        "Region": "norwayeast",
        "DefaultSourceLanguage": "no",
        "DefaultTargetLanguage": "en"
      },
      "ComputerVision": {
        "Endpoint": "https://your-computer-vision.cognitiveservices.azure.com/",
        "ApiKey": "your-computer-vision-api-key"
      }
    },
    "Norwegian": {
      "EnableNorwegianLanguageSupport": true,
      "EnableAutoTranslation": true,
      "PreferredLanguage": "no",
      "EnableHelsenorgeIntegration": true,
      "HelsenorgeApiEndpoint": "https://api.helsenorge.no/",
      "HelsenorgeApiKey": "your-helsenorge-api-key"
    },
    "Medical": {
      "EnableClinicalDecisionSupport": true,
      "EnableSymptomAnalysis": true,
      "EnableMedicationInteractionCheck": true,
      "EnableMedicalImageAnalysis": true,
      "EnablePredictiveAnalytics": true,
      "ConfidenceThreshold": 0.7,
      "MaxDifferentialDiagnoses": 5,
      "RequireDoctorApproval": true
    }
  },
  "Norwegian": {
    "HelsenorgeIntegration": {
      "BaseUrl": "https://api.helsenorge.no/",
      "ApiKey": "your-helsenorge-api-key",
      "ClientId": "your-client-id",
      "ClientSecret": "your-client-secret",
      "Scope": "helsenorge.read helsenorge.write"
    },
    "EResept": {
      "BaseUrl": "https://api.reseptformidleren.no/",
      "ApiKey": "your-eresept-api-key",
      "CertificatePath": "certificates/eresept-cert.pfx",
      "CertificatePassword": "your-certificate-password"
    },
    "FHIR": {
      "BaseUrl": "https://fhir.no/",
      "ApiKey": "your-fhir-api-key"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "TeleDoctor": "Debug"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/teledoctor-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ApplicationInsights": {
    "ConnectionString": "your-application-insights-connection-string"
  },
  "AllowedHosts": "*"
}
