{
  "ConnectionStrings": {
    "DefaultConnection": "Server=${SQL_SERVER};Database=${SQL_DATABASE};User Id=${SQL_USER};Password=${SQL_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "TeleDoctor.Modern",
    "Audience": "TeleDoctor.Users",
    "ExpiryInMinutes": 60
  },
  "AI": {
    "AzureOpenAI": {
      "Endpoint": "${AZURE_OPENAI_ENDPOINT}",
      "ApiKey": "${AZURE_OPENAI_API_KEY}",
      "DeploymentName": "${AZURE_OPENAI_DEPLOYMENT_NAME}",
      "ChatDeploymentName": "${AZURE_OPENAI_CHAT_DEPLOYMENT}",
      "EmbeddingDeploymentName": "${AZURE_OPENAI_EMBEDDING_DEPLOYMENT}",
      "MaxTokens": 4000,
      "Temperature": 0.3,
      "TopP": 0.95,
      "MaxRetries": 3
    },
    "CognitiveServices": {
      "Endpoint": "${AZURE_COGNITIVE_ENDPOINT}",
      "ApiKey": "${AZURE_COGNITIVE_API_KEY}",
      "Region": "${AZURE_REGION}",
      "TextAnalytics": {
        "Endpoint": "${AZURE_TEXT_ANALYTICS_ENDPOINT}",
        "ApiKey": "${AZURE_TEXT_ANALYTICS_KEY}"
      },
      "Translator": {
        "Endpoint": "https://api.cognitive.microsofttranslator.com/",
        "ApiKey": "${AZURE_TRANSLATOR_KEY}",
        "Region": "${AZURE_REGION}",
        "DefaultSourceLanguage": "no",
        "DefaultTargetLanguage": "en"
      },
      "ComputerVision": {
        "Endpoint": "${AZURE_VISION_ENDPOINT}",
        "ApiKey": "${AZURE_VISION_KEY}"
      }
    },
    "Norwegian": {
      "EnableNorwegianLanguageSupport": true,
      "EnableAutoTranslation": true,
      "PreferredLanguage": "no",
      "EnableHelsenorgeIntegration": true,
      "HelsenorgeApiEndpoint": "${HELSENORGE_API_ENDPOINT}",
      "HelsenorgeApiKey": "${HELSENORGE_API_KEY}"
    }
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}",
    "InstanceName": "TeleDoctor:",
    "AbortOnConnectFail": false
  },
  "SignalR": {
    "UseRedisBackplane": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "${APPLICATIONINSIGHTS_CONNECTION_STRING}"
  },
  "AllowedHosts": "*"
}
